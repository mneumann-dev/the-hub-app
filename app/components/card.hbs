<div local-class="card" class="w-100 my-1">
  <div class="d-flex align-items-center justify-content-center m-1 p-1 pt-2 has-shadow">

    <div class="d-flex flex-column p-1">
      <img class="img-fluid" src="{{@project.image}}" alt="{{@project.id}}">
      <h2 class="text-center">{{@project.id}}</h2>
      <div class="flex-center-center">
        {{#each @project.tags as |tag|}}
          <span class="p-1">#{{tag}}</span>
        {{/each}}
      </div>

    </div>

    <div class="col-6 text-center p-1 pb-2">
      <p class="m-auto">{{@project.description}}</p>


      <div class="d-flex justify-content-center p-1">
        <a class="text-decor-none m-1" href="{{@project.href.git}}" rel="noreferrer noopener" target="_blank">
          Git
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18"><path d="M7.5 4.5L6.44 5.56 9.88 9l-3.44 3.44L7.5 13.5 12 9z"/></svg>
        </a>
        <a class="text-decor-none m-1" href="{{@project.href.site}}" rel="noreferrer noopener" target="_blank">
          Site
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18"><path d="M7.5 4.5L6.44 5.56 9.88 9l-3.44 3.44L7.5 13.5 12 9z"/></svg>
        </a>
      </div>
    </div>
  </div>
</div>
