<section local-class="projects">
  <div local-class="search" class="flex-center-center p-1 has-shadow-lg {{if this.toggle.show "y-show"}}"
    {{did-insert this.setTopPosition}} {{did-insert this.adjustTopPosition}}>

    <Input @value={{this.toggle.query}} />
    <button {{on "click" this.toggle.clear}}>
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><path d="M12 2C6.47 2 2 6.47 2 12s4.47 10 10 10 10-4.47 10-10S17.53 2 12 2zm5 13.59L15.59 17 12 13.41 8.41 17 7 15.59 10.59 12 7 8.41 8.41 7 12 10.59 15.59 7 17 8.41 13.41 12 17 15.59z"/></svg>
    </button>

  </div>

  <Projects::Filter @projects={{@model}} @query={{this.toggle.query}} as |project|>
    <div class="d-flex justify-content-center w-100">
      {{#each project as |project|}}
        <Card @project={{project}} />
      {{/each}}
    </div>
  </Projects::Filter>

</section>



